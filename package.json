{
	"name": "judicature",
	"version": "0.1.0",
	"private": true,
	"author": "adityanithariya",
	"license": "MIT",
	"scripts": {
		"format": "biome format . --write",
		"lint": "biome format --write . && biome check . --apply",
		"stage": "yarn lint && git add .",

		"client:install": "cd client && yarn",
		"client:dev": "cd client && yarn dev",
		"client:build": "cd client && yarn build",
		"client:start": "cd client && yarn start",

		"server:install": "cd server && yarn",
		"server:dev": "yarn network:start && cd server && yarn dev",
		"server:start": "yarn network:start && cd server && yarn start",

		"network:up": "cd hyperledger/singleton-network && ./network.sh up",
		"network:down": "cd hyperledger/singleton-network && ./network.sh down",

		"install": "yarn client:install && yarn server:install",
		"start": "yarn network:start && yarn server:start && yarn client:start"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"simple-git-hooks": "^2.9.0"
	},
	"simple-git-hooks": {
		"pre-commit": "yarn format && yarn lint"
	}
}
